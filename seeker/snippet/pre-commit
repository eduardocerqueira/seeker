#!/bin/bash

RESET='\e[0m'
RED='\e[31m'
GREEN='\e[32m'
YELLOW='\e[33m'


#----------------------------------------------------------------------------------------------------------------------
# FUNCTIONS
#----------------------------------------------------------------------------------------------------------------------

function __displayBox() #(color, message)
{
    caption=$(printf "%-72s" "${2}")

    echo -e "${1}"
    echo -e "┌──────────────────────────────────────────────────────────────────────────┐"
    echo -e "│ ${RESET}${caption}${1} │"
    echo -e "└──────────────────────────────────────────────────────────────────────────┘"
    echo -e "${RESET}"
}

function __checkEasyCodingStandard()
{
    task=$(printf "%-40s" "Easy Coding Standard (ECS)")

    output=$(composer cs-fix)
    RETVAL=$?

    if [[ $RETVAL != 0 ]]
    then
        hasErrors=1

        echo -e "    ${task}"
        echo -e ""
        echo -e "${output}"
    else
        echo -e "    ${task}"
    fi

    if [[ $hasErrors == 1 ]]
    then
        __displayBox ${RED} 'GIT COMMIT IS NOT ALLOWED!'
        exit 1
    fi
}


#----------------------------------------------------------------------------------------------------------------------
# MAIN LOGIC
#----------------------------------------------------------------------------------------------------------------------

__checkEasyCodingStandard


__displayBox ${GREEN} 'GIT COMMIT IS ALLOWED!'
exit 0
