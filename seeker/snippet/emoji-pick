#!/bin/sh
emoji="$(perl -ne 'print "$1 $2\n" if /fully-qualified.*# (\S+) E\S+ (.*)/' \
  /usr/share/unicode/emoji/emoji-test.txt \
  | fuzzel --dmenu -p 'Emoji: ' \
  | awk '{print $1}')"
wtype -- "$emoji"
