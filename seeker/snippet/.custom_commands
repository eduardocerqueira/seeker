#!/bin/bash

function clean_branches() {
  git branch --merged | grep -v "\*" | grep -v master | grep -v dev | xargs -n 1 git branch -d
}

function update_branch() {
  git switch main
  git pull
  bundle install
  yarn install
  git switch -
}

function new_branch() {
  git switch -c $1
}