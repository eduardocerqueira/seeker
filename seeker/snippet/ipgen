#!/bin/bash
set -e
get_ip(){ ip=$(curl -4s --connect-timeout 5 https://ifconfig.io || curl -4s --connect-timeout 5 https://icanhazip.com || curl -4s --connect-timeout 5 https://ipecho.net/plain); if [ -z "$ip" ]; then echo "❌ Could not determine public IP address." && exit 1; fi; echo "$ip"; }
IP=$(get_ip)
echo "SERVER_IP=${IP}" > .env
echo "✅ .env file created with:"
echo "SERVER_IP=${IP}"
