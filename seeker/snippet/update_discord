#!/bin/bash

# Downloaded discord file should be a .gz file. Use gunzip <filename> to unzip it. After that you can use this tool

if [ $# -eq 0 ]
then
        echo "No path was given!"
        echo "Please run: update_discord <path_to_tar>"
        exit 1
fi

sudo mv $1 /opt/discord.tar &&
cd /opt/ &&
sudo tar -xf discord.tar &&
sudo rm discord.tar &&
sudo mv ./discord ./discord-backup &&
sudo rm -r discord-backup &&
sudo mv ./Discord ./discord
echo "Finished updating discord. Please restart it"