#!/bin/zsh
for f in vol vol/**/* ; do
	echo "\nfile $f"
	stat --format "vol    dev: %Hd,%3Ld  inode: %15i" $f
	stat --format "first   dev: %Hd,%3Ld  inode: %15i" ${f//vol/first-snap}
	stat --format "second dev: %Hd,%3Ld  inode: %15i" ${f//vol/second-snap}
done
