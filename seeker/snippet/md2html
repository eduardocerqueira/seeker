#!/usr/bin/env python3
import markdown
import sys

if len(sys.argv) < 2:
    raise RuntimeError('usage: convert <filename>')
filename = sys.argv[1]
try:
    with open(filename, 'r') as file:
        tmp = file.read()
        html = markdown.markdown(tmp, extensions=['fenced_code'])
except IOError as e:
    raise e
print(html)
    
