#!/usr/bin/env bash

## save as /usr/local/bin/composer and run `chmod +x /usr/local/bin/composer`

docker run --platform=linux/amd64 --rm --interactive --tty \
  --volume $PWD:/app \
  --volume ${COMPOSER_HOME:-$HOME/.composer}:/tmp \
  composer $@
