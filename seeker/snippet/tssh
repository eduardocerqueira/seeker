#!/bin/bash
hosts=( "$@" )
tmux new-window
tmux send-keys "ssh ${hosts[0]}"
for i in $(seq 1 $((${#hosts[@]} - 1)))
do
  tmux split-window
  tmux send-keys "ssh ${hosts[$i]}"
done
tmux setw synchronize-panes
tmux send-keys Enter