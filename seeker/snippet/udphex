#!/usr/bin/env python3

import socket
import sys

host, port = sys.argv[1].split(':')

s = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
s.connect((host, int(port)))

while True:

    print('---')
    s.send(bytes.fromhex(input('>>> ')))
    print('<<<', bytes.hex(s.recv(1024)))